{
  "name": "turbo-forge",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:production": "turbo build && pnpm run copy:standalone",
    "check": "npx ultracite@latest check",
    "copy:standalone": "pnpm run copy:web",
    "copy:web": "cp -r apps/web/.next/static apps/web/.next/standalone/apps/web/.next/ && cp -r apps/web/public apps/web/.next/standalone/apps/web/",
    "fix": "npx ultracite@latest fix",
    "lint": "ultracite lint",
    "lint:fix": "ultracite lint --check",
    "format": "ultracite format",
    "format:fix": "ultracite format --write",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "clean": "git clean -xdf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.1",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.8",
    "@types/node": "^24.9.1",
    "tsup": "^8.5.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "ultracite": "6.0.3",
    "vitest": "^4.0.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.25.0",
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
