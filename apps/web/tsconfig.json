{
  "extends": ["@repo/typescript-config/nextjs.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@payload-config": ["./src/payload.config.ts"],
      "@payload-types": ["./src/payload.types.ts"],
      "@env": ["./env.ts"]
    },
    "lib": ["dom", "dom.iterable", "esnext", "webworker"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
