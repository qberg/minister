{
  "name": "web",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=2048\" next build",
    "dev": "cross-env NODE_OPTIONS='--max-old-space-size=2049' next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "seed": "payload run src/seed/index.ts",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@number-flow/react": "^0.5.10",
    "@payloadcms/db-postgres": "3.65.0",
    "@payloadcms/live-preview-react": "3.65.0",
    "@payloadcms/next": "3.65.0",
    "@payloadcms/richtext-lexical": "3.65.0",
    "@payloadcms/storage-s3": "3.65.0",
    "@payloadcms/ui": "3.65.0",
    "@radix-ui/react-visually-hidden": "^1.2.4",
    "@repo/design-system": "workspace:*",
    "@repo/i18n": "workspace:*",
    "@repo/next-config": "workspace:*",
    "@repo/seo": "workspace:*",
    "@t3-oss/env-nextjs": "0.13.8",
    "class-variance-authority": "^0.7.1",
    "cross-env": "^7.0.3",
    "csv-parse": "^6.1.0",
    "dotenv": "16.4.7",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "graphql": "^16.8.1",
    "lenis": "^1.3.15",
    "lucide-react": "^0.561.0",
    "motion": "^12.23.25",
    "next": "catalog:",
    "next-view-transitions": "^0.3.5",
    "nuqs": "^2.8.5",
    "payload": "3.65.0",
    "radix-ui": "^1.4.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-twitter-embed": "^4.0.4",
    "react-use-measure": "^2.1.7",
    "sharp": "0.34.2",
    "swiper": "^12.0.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "1.56.1",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.5.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "jsdom": "26.1.0",
    "playwright": "1.56.1",
    "playwright-core": "1.56.1",
    "tailwindcss": "^4.1.16",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  }
}
